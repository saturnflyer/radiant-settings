- body_classes << 'reversed'
- content_for 'page_css' do
  :sass
    h2.setting-name
      color: #C00
      font-size: 200%
      font-family: Georgia,Palatino,"Times New Roman",Times,serif
      font-weight: normal
      margin: 25px 0 0
    
    div.description
      margin: 5px 20px
      color: #444
      
    p.title
      margin: 10px 0 !important
    
    textarea.textarea
      height: 150px !important
      width: 100%
      display: block

%h1= t('settings_extension.pages.new.title')

- form_for :setting, :url => admin_settings_path do |f|
  .form-area
    %p.title
      %label= t('settings_extension.pages.new.name')
      = f.text_field :key, :class => 'textbox'
    %p.title
      %label= t('settings_extension.pages.new.value')
      = f.text_field :value, :class => 'textbox'
    %p.title
      %label= t('settings_extension.pages.new.description')
      = f.text_area :description, :class => 'textarea'
        
    %p.buttons
      = save_model_button(@setting, :label => t('settings_extension.pages.new.create_setting'))
      = save_model_and_continue_editing_button(@setting)
      = t('settings_extension.or')
      = link_to t('settings_extension.cancel'), admin_settings_url